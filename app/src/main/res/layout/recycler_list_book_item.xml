<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <LinearLayout
        android:id="@+id/recycler_item_book_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/book_item_border"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recycler_item_book_avt"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recycler_item_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#cc9900"
                android:text="đây là tên truyện"/>
            <TextView
                android:id="@+id/recycler_item_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:text="Tác giả"/>
            <TextView
                android:id="@+id/recycler_item_book_chapt_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:text="Số chương"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>